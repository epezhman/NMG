@model {0}
@{{
    ViewBag.Title = {4}.{5}.Index;    
}}
<div class="">
    <div class="row-fluid">
        <div class="span12">
            <h2>@{4}.{5}.List</h2>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            @*@if (Request.IsAuthenticated)
            {{*@
            @Ajax.ActionLink(@{4}.{5}.Create, "Create", new {{  }},
                                     new AjaxOptions
                                         {{
                                             HttpMethod = "GET",
                                             InsertionMode = InsertionMode.Replace,
                                             UpdateTargetId = "dialog",
	            								OnSuccess = " $('#dialog').dialog('open');",
	            								LoadingElementId = "ajaxLoading"
                                         }}, new {{ @class = "btn" }})
            @*}}*@
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <fieldset>
                <legend>@{4}.{5}.Search</legend>
                @using (Ajax.BeginForm("IX", new {{  }}, new AjaxOptions()
                     {{
                         UpdateTargetId = "ResultList",
                         LoadingElementId = "loadingSearch",
                         HttpMethod = "Post",
                         InsertionMode = InsertionMode.Replace,       
                     }},new {{ id = "searchForm" , @class = "form-horizontal" }}))
                     {{        
                    @Html.Action("{3}", Model)
                    <hr noshade="noshade" />      
                    <div class="control-group">
                        <div class="controls">
                            <input type="submit" value="@({4}.{5}.Submit)" id="submit"  class="btn submit"/>
                            <div id="loadingSearch" style="display: none">
                                <img src="@Url.Content("~/Images/ajax-loader/loading1.gif")" alt=""/>
                            </div>
                        </div>
                    </div>                                                      
                     }}
            </fieldset>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div id="ResultList">
                @Html.Action("IX", Model)
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <fieldset>
                <legend>@{4}.{5}.Help</legend>
                <ul>
                    <li></li>
                </ul>
            </fieldset>
        </div>
    </div>
</div>
